
@{
    ViewBag.Title = "BaltimoreReferAFriend";
}

<h2>BaltimoreReferAFriend</h2>

<style>
    input.parsley-error, select.parsley-error, textarea.parsley-error {
        color: #B94A48;
        background-color: #F2DEDE;
        border: 1px solid #EED3D7;
    }

    .bs-callout-warning {
        background-color: #fcf8f2;
        border-color: #f0ad4e;
    }

    .bs-callout {
        margin: 20px 0;
        padding: 20px;
        border-left: 3px solid #eee;
    }

    .bs-callout-warning h4 {
        color: #f0ad4e;
    }
</style>
<script src="~/Scripts/parsley.min.js"></script>


<form id="referAFriendForm" name="referAFriendForm" method="post" action="http://www.northamericantradeschools.ca/external/BaltimoreReferAFriendPost" target="_self">
    <input type="hidden" name="ORGID" value="240" />
    <input type="hidden" name="MailListID" value="240001" />
    <input type="hidden" name="CampusID" value="24002" />
    <div class="">
        <label class="" for="formyourname">Your Name: <span class="">*</span></label>
        <input type="text" class="" name="custField16" id="formyourname" required="" />
    </div>
    <div class="">
        <label class="" for="formtheirname">Interested Friends Name: <span class="">*</span></label>
        <input type="text" class="" name="FirstName" id="formtheirname" />
    </div>
    <div class="">
        <label class="" for="formtelephone">Interest Friends Phone: <span class="">*</span></label>
        <input type="text" class="" name="Telephone" for="formtelephone" />
    </div>
    <div class="">
        <label class="" for="formemail">Interested Friends Email: <span class="">*</span></label>
        <input type="email" class="" name="Email" for="formemail" />
    </div>
    <div class="">
        <input id="referFriendSubmit" type="submit" value="Refer Them Now >" class="" />
    </div>
</form>



<script type="text/javascript">
    $(function () {
        $('#contactUsForm').parsley().on('field:validated', function () {
            var ok = $('.parsley-error').length === 0;
            $('.bs-callout-warning').toggleClass('hidden', ok);
        })
        .on('form:submit', function () {
            return false; // Don't submit form for this demo
        });
    });
</script>
