@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="container">
    <div class="heroWrapper">
        @ViewBag.HeroText
    </div>
    <div class="leftMenuWrapper col-md-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-career">
            <span class=""><span class="glyphicon glyphicon-align-justify"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <ul class="leftMenu list-unstyled collapse" id="side-menu-career">
            <li class="item header">@Html.ActionLink("CAREER SERVICES", "Index", "CareerServices")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Careers Services Home", "Index", "CareerServices")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Hire a Grad", "HireAGrad", "Home")</li>
            <li class="item side-menu-h2">@Html.ActionLink("NATS Advantage", "NATSAdvantage", "CareerServices")</li>
            <li class="item side-menu-h2">@Html.ActionLink("KPI and Default Rates", "KPIandDefault", "CareerServices")</li>
            <br />
            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Catalogue</li>
        </ul>
        <br />
        <a href="https://natradeschools.virtualadmissions.com/?lead_src=w-sidebar" target="_blank">
            <img class="img-responsive" width="100%" src="~/Content/images/nats-vaa.jpg" alt="virtual admissions questionnaire for NATS" />
        </a>
    </div>

    <div class="col-sm-9 pull-right">
        <div class="contentBody">
            <div class="row bodyHeaderWrapper">
                @ViewBag.BodyHeaderText
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <br />
</div>


<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });

    $(window).bind("pageshow", function () {
        var forms = $("form");
        forms.each(function (i) {
            forms[i].reset();
        });
    });
</script>