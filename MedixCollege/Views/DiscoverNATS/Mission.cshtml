    Layout = "~/Views/DiscoverNATS/_DiscoverNATSLayout.cshtml";
}
@{
    ViewBag.Title = "Mission";
}
<div class="col-sm-12 no-padding botMARG">
    <h1 class="contentPageH1">NATS MISSION</h1>
    <ol class="breadcrumb">
        <li class="contentp">@Html.ActionLink("Home", "Index", "Home")</li>
        <li class="contentp">@Html.ActionLink("About NATS", "Index", "DiscoverNATS")</li>
        <li class="active contentp">Mission</li>
    </ol>    <img class="img-responsive" width="100%" src="/Content/images/admissions-home.jpg" alt="construction managers working on a project" />

</div>

<div class="col-sm-8 mid-padding">

    <div class="col-sm-12 EXpadding">

        <br class="hidden-lg hidden-md hidden-sm" />
        <h1 class="contentH1">OUR MISSION</h1><hr class="hrp11" />
        To service with excellence the needs of our students and our community by matching skills.
        <br /><br />
        To teach relevant programs; to nurture and support each student from acceptance through graduation in preparation for successful employment.
        <br /><br />
        Our training programs are practical, intense and result oriented. We provide you with the skills you need to find employment in today’s workforce.
        <br /><br />
  
        The purpose of North American Trade Schools (NATS) is to provide post–secondary education in a private career college setting to students. 
        <br /><br />
        In January, the school was accredited by the Accrediting Commission of the National Association of Trade and Technical Schools, (NATTS), Washington, D.C.
        <br /><br />
        Our business statement says it all: “Real people; Real training; Real jobs.” Our graduates are not only prepared to work in the building trades, welding technology, electrical and HVAC industry, they are also exposed to the knowledge, skills, tools and proper attitude to be employment ready. 
        NATS places utmost importance in the personal and job site safety of our programs.         <br /><br />
        We require 100% student commitment and dedication in order to be successful in our programs. An extremely rewarding future awaits the individual who is ready to make this commitment.

        <br /><br /><br />
        <button type="button" class="btn btn-default btn-lg btn-block contentH2 btnBLUE"><span class="glyphicon glyphicon-send"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO PROGRAM DIRECTORY", "AllPrograms", "Programs")</button>
        <br />
        <button type="button" class="btn btn-default btn-lg btn-block contentH2 btnBLUE"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;&nbsp;@Html.ActionLink("GO TO CAMPUS DIRECTORY", "Index", "Campuses")</li></button>

        <br class="hidden-lg hidden-md hidden-sm"/>
        <br class="hidden-lg hidden-md hidden-sm" />
    </div>
    </div>

    <div class="col-sm-4 pull-right no-padding">
        <div class="panel panel-default bluePANEL2">

            <div class="panel-body">
                <h1 class="contentH1whitemain text-center">
                    <span class="glyphicon glyphicon-comment 1blueGoldBorder"></span>&nbsp; Ask a Question
                </h1><hr class="hrpw3" />
                <div class="row formWrapper overquestionsForm2">
                                        <form id="discoverMedixQuestionsForm" name="discoverMedixQuestionsForm" data-parsley-validate="" class="questionsForm" method="post" action="/home/askquestion">
                        <input type="hidden" name="ORGID" value="240" />
                        <input type="hidden" name="MailListID" value="240001" />
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">First Name: <span class="text-danger">*</span></label>
                            <input type="text" class="form-control pull-right" name="FirstName" required="">
                        </div>
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">Email: <span class="text-danger">*</span></label>
                            <input type="email" class="form-control pull-right" name="Email" required="">
                        </div>
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">Telephone: <span class="text-danger">*</span></label>
                            <input type="text" class="form-control pull-right" name="Telephone" required="">
                        </div>
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">Location: <span class="text-danger" required="">*</span></label>
                            <select class="form-control pull-right" name="CampusID">
                                <option value="0">Select</option>
                                <option value="24004">Brampton-NATS</option>
                                <option value="24001">London-NATS</option>
                                <option value="240">Toronto</option>
                            </select>
                        </div>
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">Program: <span class="text-danger">*</span></label>
                            <select class="form-control pull-right" name="ProgramID">
                                <option class="0 24004 24001 240" value="0">Select</option>
                                <option class="0 24004 24001" value="39064">Cabinetmaking</option>
                                <option class="0 24004" value="40332">Construction Maintenance Electrician Pre-Apprenticeship</option>
                                <option class="0 24004 24001" value="39061">Electrical Technology</option>
                                <option class="0 24004 24001" value="39060">Home Renovation Technician</option>
                                <option class="0 24004 24001" value="39062">HVAC Technician</option>
                                <option class="0 24001" value="40294">Motorcycle & Small Engine Repair</option>
                                <option class="0 24004 24001 240" value="39737">Solar Energy Technician</option>
                                <option class="0 24004 24001" value="39063">Welding Technology</option>
                            </select>
                        </div>
                        <div class="input-group spacer-top">
                            <label class="pull-left contentpw">Comments: </label>
                            <textarea class="form-control pull-right" name="Comment2"></textarea>
                        </div>
                        <div class="small-text spacer-top text-center contentpw">
                            Please contact me with more information relating to the school and program(s). I understand I may cancel my consent at anytime.
                        </div>
                        <div class="text-center">
                            <input id="applyNowSubmit" type="submit" value="Submit" class="btn popup-form-button spacer-top btn-block" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

<style>
    input.parsley-error, select.parsley-error, textarea.parsley-error {
