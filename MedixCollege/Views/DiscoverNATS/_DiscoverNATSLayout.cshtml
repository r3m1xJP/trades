@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Discover North American Trade Schools - ";
    ViewBag.PageDescription = "Learn more about North American Trade Schools. ";

}

<br />
<div class="container">
    <div class="heroWrapper">
        @ViewBag.HeroText
    </div>
    <div class="leftMenuWrapper col-sm-3 custom-collapse">
        <button class="btn-brand-white collapse-toggle visible-xs" type="button" data-toggle="collapse" data-parent="custom-collapse" data-target="#side-menu-discover">
            <span class=""><span class="glyphicon glyphicon-align-justify"></span></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <ul class="leftMenu list-unstyled collapse" id="side-menu-discover">
            <li class="item header">@Html.ActionLink("Discover NATS", "Index", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("About NATS", "Index", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("President's Message", "PresidentsMessage", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("History", "History", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Mission", "Mission", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Accreditation", "Accreditation", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Associations", "Associations", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Partner Schools", "PartnerSchools", "DiscoverNATS")</li>
            <li class="item side-menu-h2">@Html.ActionLink("Careers at NATS", "CareersAtNATS", "DiscoverNATS")</li>
            <li class="item btn btn-brand btn-block spacer-top" id="askQuestion">Ask a Question</li>
            <li class="item btn btn-brand btn-block" id="requestCatalogue">Request Catalogue</li>
        </ul>
        <br />
        <a href="https://natradeschools.virtualadmissions.com/?lead_src=w-sidebar" target="_blank">
            <img class="img-responsive" width="100%" src="~/Content/images/nats-vaa.jpg" alt="virtual admissions questionnaire for NATS" />
        </a>
    </div>


    <div class="col-sm-9 pull-right">
        <div class="contentBody">
            <div class="row bodyHeaderWrapper">
                @ViewBag.BodyHeaderText
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
    <br />
</div>


<script>
    $(document).ready(function () {
        $('#applyOnline').click(function () {
            $('.popup-form-wrapper').hide();
            $('#applyNowWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#requestCatalogue').click(function () {
            $('.popup-form-wrapper').hide();
            $('#requestCatalogueWrapper').show();
            $('.form-overlay').slideDown()
        });

        $('#askQuestion').click(function () {
            $('.popup-form-wrapper').hide();
            $('#askQuestionWrapper').show();
            $('.form-overlay').slideDown()
        });
    });

    $(window).bind("pageshow", function () {
        var forms = $("form");
        forms.each(function (i) {
            forms[i].reset();
        });
    });
</script>
