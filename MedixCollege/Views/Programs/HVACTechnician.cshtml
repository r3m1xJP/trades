</div>



    <script>
        $(document).ready(function () {
            $('#applyOnline').click(function () {
                $('.popup-form-wrapper').hide();
                $('#applyNowWrapper').show();
                $('.form-overlay').slideDown()
            });

            $('#requestCatalogue').click(function () {
                $('.popup-form-wrapper').hide();
                $('#requestCatalogueWrapper').show();
                $('.form-overlay').slideDown()
            });

            $('#askQuestion').click(function () {
                $('.popup-form-wrapper').hide();
                $('#askQuestionWrapper').show();
                $('.form-overlay').slideDown()
            });

            $('#hvacCampusList').change(function () {
                var campusId = $('#hvacCampusList option:selected').val();

                $.each($("#hvacProgramsList option"), function (index, value) {
                    if ($(value).hasClass(campusId) !== true) {
                        $(value).hide();
                    } else {
                        $(value).show();
                    }
                });
            });
        });
    </script>

